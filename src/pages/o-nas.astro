---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import beataImage from '../assets/images/Beata.jpg';
import AnimatedSection from '../components/AnimatedSection.astro';

const team = [
  {
    name: "Beata Wojdałowicz",
    title: "Ekspertka Prawa Rodzinnego",
    qualifications: [
      "Absolwentka Prawa Rodzinnego na Uniwersytecie Westminster w Londynie z wyróżnieniem",
      "Członkini Chartered Institute of Legal Executives (CILEX)",
      "Certyfikowana mediatorka z ponad 10-letnim doświadczeniem",
      "Specjalistka w sprawach transgranicznych (polsko-brytyjskie rodziny)",
      "Doświadczenie w renomowanej kancelarii \"Oliver Fisher\" w Londynie"
    ],
    languages: "Płynna polszczyzna i angielski",
    bio: "Beata posiada ponad 10-letnie doświadczenie w prawie rodzinnym w Wielkiej Brytanii. Specjalizuje się w sprawach transgranicznych, gdzie jedna strona jest z Polski, a druga z UK. Jej podejście opiera się na mediacji i poszukiwaniu rozwiązań, które są najlepsze dla dobra dzieci."
  },
  {
    name: "Grażyna Modzelewska",
    title: "Założycielka & McKenzie Friend",
    image: "/images/grazyna.jpg",
    qualifications: [
      "Założycielka firmy w 2015 roku",
      "Ponad 15 lat doświadczenia w sprawach opieki nad dziećmi, rozwodów i podziału majątku",
      "Ekspertka od spraw z udziałem CAFCASS",
      "Inicjatorka warsztatów edukacyjnych dla polskiej społeczności",
      "Sukcesy w rozwiązywaniu skomplikowanych konfliktów rodzinnych"
