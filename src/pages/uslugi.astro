const testimonials = [
  {
    content: "Dzięki pomocy McKenzie Friend udało mi się uzyskać korzystne warunki kontaktów z dziećmi. Profesjonalne podejście i doskonała znajomość brytyjskiego prawa rodzinnego.",
    author: "Tomasz K.",
    location: "Manchester"
  },
  {
    content: "Proces rozwodowy przebiegł sprawnie i bez zbędnych kosztów. Cała dokumentacja została przygotowana perfekcyjnie, a sąd nie miał żadnych zastrzeżeń.",
    author: "Anna W.",
    location: "Londyn"
  },
  {
    content: "Pomoc w uzyskaniu zgody na wyrobienie polskiego paszportu dla mojej córki była nieoceniona. Wszystko załatwione szybko i skutecznie.",
    author: "Marta S.",
    location: "Birmingham"
  }
];
---

<Layout title="Usługi McKenzie Friend | Profesjonalne Wsparcie Prawne dla Polaków w UK">
  <Navigation />
  <main>
    <!-- Hero Section with animation -->
    <AnimatedSection animation="fadeIn" duration={0.8}>
      <section class="pt-32 pb-24 relative">
        <!-- Enhanced background with multiple layers -->
        <div class="absolute inset-0">
          <!-- Primary gradient background -->
          <div class="absolute inset-0 bg-gradient-to-br from-primary-50 via-primary-100/50 to-white"></div>
          
          <!-- Animated subtle waves -->
          <div class="absolute inset-0 opacity-10">
            <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
              <path fill="currentColor" d="M0,50 C30,60 70,40 100,50 L100,100 L0,100 Z" class="text-primary-600/30 animate-wave-slow"></path>
              <path fill="currentColor" d="M0,50 C20,60 80,40 100,50 L100,100 L0,100 Z" class="text-primary-400/20 animate-wave-slower translate-x-1"></path>
            </svg>
          </div>
          
          <!-- Enhanced dot pattern -->
          <div class="absolute inset-0 opacity-[0.07]" style="background-image: radial-gradient(#0268A1 0.5px, transparent 0.5px); background-size: 24px 24px;"></div>
        </div>

        <div class="container mx-auto px-4 relative z-10">
          <AnimatedSection animation="slideUp" delay={0.2} duration={0.6}>
            <div class="max-w-5xl mx-auto">
              <!-- Main content with improved layout -->
              <div class="grid md:grid-cols-2 gap-12 items-center">
                <!-- Left column: Text content -->
                <div class="text-left">
                  <span class="inline-block px-4 py-1.5 bg-primary-100 text-primary-700 rounded-full text-sm font-medium mb-6">
                    Wsparcie Prawne
                  </span>
                  <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif font-bold mb-6 leading-tight text-gray-900">
                    Profesjonalne Wsparcie w Sprawach Rodzinnych
                  </h1>
                  <p class="text-xl text-gray-700 mb-8 leading-relaxed">
                    Oferujemy pomoc prawną online w zakresie prawa rodzinnego w Anglii i Walii. 
                    Działamy od 2015 roku, wspierając rodaków w trudnych sytuacjach sądowych.
                  </p>
                  
                  <!-- Enhanced CTA buttons -->
                  <div class="flex flex-wrap gap-4">
                    <a href="/#contact" 
                       class="inline-flex flex-col justify-center px-8 py-4 bg-primary-600 text-white rounded-lg shadow-lg hover:bg-primary-700 transition-all duration-300">
                      <span>Umów konsultację</span>
                      <span class="text-sm opacity-80">Darmowe 15-min spotkanie</span>
                    </a>
                    <a href="#services" 
                       class="inline-flex items-center px-8 py-4 bg-white border border-primary-100 text-primary-700 rounded-lg hover:bg-primary-50 transition-colors">
                      <span>Zobacz nasze usługi</span>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                      </svg>
                    </a>
                  </div>
                </div>

                <!-- Right column: Feature highlights -->
                <div class="space-y-4">
                  {[
                    { 
                      icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v17.25m0 0c-1.472 0-2.882.265-4.185.75M12 20.25c1.472 0 2.882.265 4.185.75M18.75 4.97A48.416 48.416 0 0 0 12 4.5c-2.291 0-4.545.16-6.75.47m13.5 0c1.01.143 2.01.317 3 .52m-3-.52 2.62 10.726c.122.499-.106 1.028-.589 1.202a5.988 5.988 0 0 1-2.031.352 5.988 5.988 0 0 1-2.031-.352c-.483-.174-.711-.703-.59-1.202L18.75 4.971Zm-16.5.52c.99-.203 1.99-.377 3-.52m0 0 2.62 10.726c.122.499-.106 1.028-.589 1.202a5.989 5.989 0 0 1-2.031.352 5.989 5.989 0 0 1-2.031-.352c-.483-.174-.711-.703-.59-1.202L5.25 4.971Z" />
                      </svg>`, 
                      title: "Doświadczenie", 
                      desc: "9+ lat w brytyjskim prawie rodzinnym" 
                    },
                    { 
                      icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 0 1 3 19.875v-6.75ZM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V8.625ZM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V4.125Z" />
                      </svg>`, 
                      title: "Skuteczność", 
                      desc: "70% spraw zakończonych ugodą" 
                    },
                    { 
                      icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0 1 15.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 0 1 3 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 0 0-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 0 1-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 0 0 3 15h-.75M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm3 0h.008v.008H18V10.5Zm-12 0h.008v.008H6V10.5Z" />
                      </svg>`, 
                      title: "Oszczędność", 
                      desc: "Do £1100 mniej niż tradycyjny prawnik" 
                    },
                    { 
                      icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z" />
                      </svg>`, 
                      title: "Wsparcie", 
                      desc: "Pomoc w języku polskim na każdym etapie" 
                    }
                  ].map(feature => (
                    <div class="bg-white/80 backdrop-blur rounded-xl p-4 border border-primary-50 shadow-sm hover:shadow-md transition-all duration-300">
                      <div class="flex items-center gap-4">
                        <div class="w-12 h-12 flex items-center justify-center rounded-xl bg-primary-100 text-primary-700">
                          <Fragment set:html={feature.icon} />
                        </div>
                        <div>
                          <h3 class="font-medium text-gray-900">{feature.title}</h3>
                          <p class="text-gray-600 text-sm">{feature.desc}</p>
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          </AnimatedSection>
        </div>
      </section>
    </AnimatedSection>

    <!-- Services Section with animations -->
    <section id="services" class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <AnimatedSection animation="fadeIn" delay={0.1} duration={0.7}>
          <div class="max-w-4xl mx-auto text-center mb-16">
            <span class="bg-primary-100 text-primary-800 text-sm font-medium px-3 py-1 rounded-full">Nasze Usługi</span>
            <h2 class="text-3xl md:text-4xl font-serif font-semibold text-gray-900 mt-4 mb-4">
              Kompleksowe wsparcie w sprawach rodzinnych
            </h2>
            <p class="text-lg text-gray-600 max-w-3xl mx-auto">
              Oferujemy szeroki zakres usług dostosowanych do indywidualnych potrzeb naszych klientów.
            </p>
          </div>
        </AnimatedSection>
        
        <div class="max-w-6xl mx-auto">
          {serviceCategories.map((category, categoryIndex) => (
            <AnimatedSection animation="slideUp" delay={0.2 + categoryIndex * 0.1} duration={0.6}>
              <div class="mb-16">
                <div class="flex items-center mb-8">
                  <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center text-primary-700 mr-4">
                    <Fragment set:html={category.icon} />
                  </div>
                  <div>
                    <h2 class="text-2xl font-serif font-semibold text-gray-900">{category.title}</h2>
                    {category.description && <p class="text-gray-600 mt-1">{category.description}</p>}
                  </div>
                </div>
                
                <div class="grid md:grid-cols-2 gap-8">
                  {category.services.map((service, serviceIndex) => (
                    <AnimatedSection animation="scale" delay={0.3 + categoryIndex * 0.1 + serviceIndex * 0.05} duration={0.5}>
                      <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-gray-100">
                        <div class="flex justify-between items-start mb-6">
                          <h3 class="text-xl font-semibold text-gray-900">{service.title}</h3>
                          <span class="bg-primary-100 text-primary-800 text-sm font-medium px-4 py-1.5 rounded-full whitespace-nowrap">
                            {service.price}
                          </span>
                        </div>
                        <p class="text-gray-600">{service.description}</p>
                        <div class="mt-6 pt-6 border-t border-gray-100">
                          <a href="/#contact" class="text-primary-600 font-medium hover:text-primary-700 transition-colors flex items-center">
                            Zapytaj o szczegóły
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
                            </svg>
                          </a>
                        </div>
                      </div>
                    </AnimatedSection>
                  ))}
                </div>
              </div>
            </AnimatedSection>
          ))}
        </div>
      </div>
    </section>

    <!-- Payment Options Section with animations -->
    <AnimatedSection animation="fadeIn" duration={0.7}>
      <section class="py-20">
        <div class="container mx-auto px-4">
          <div class="max-w-4xl mx-auto">
            <div class="text-center mb-16">
              <span class="bg-primary-100 text-primary-800 text-sm font-medium px-3 py-1 rounded-full">Płatności</span>
              <h2 class="text-3xl md:text-4xl font-serif font-semibold text-gray-900 mt-4 mb-4">
                Elastyczne opcje płatności
              </h2>
              <p class="text-lg text-gray-600 max-w-3xl mx-auto">
                Oferujemy różne formy płatności dostosowane do Twojej sytuacji finansowej.
              </p>
            </div>
            
            <div class="grid md:grid-cols-3 gap-8">
              <AnimatedSection animation="slideUp" delay={0.3} duration={0.5}>
                <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
