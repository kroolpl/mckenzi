---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import AnimatedSection from '../components/AnimatedSection.astro';

const serviceCategories = [
  {
    title: "Przygotowanie dokumentów sądowych",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
    </svg>`,
    description: "Kompleksowa pomoc w przygotowaniu wszystkich niezbędnych dokumentów prawnych w sprawach rodzinnych.",
    services: [
      {
        title: "Wnioski o kontakty z dzieckiem",
        description: "Forma C100, Child Arrangement Orders - kompleksowa pomoc w przygotowaniu dokumentacji.",
        price: "od £250"
      },
      {
        title: "Rozwód online (no-fault divorce)",
        description: "Przeprowadzenie całego procesu rozwodowego oraz pomoc przy podziale majątku.",
        price: "£400-£600"
      },
      {
        title: "Zgoda na polski paszport dla dziecka",
        description: "Pomoc w uzyskaniu zgody sądowej na wyrobienie polskiego paszportu dla dziecka.",
        price: "£200"
      },
      {
        title: "Zwolnienie z opłat sądowych",
        description: "Pomoc w uzyskaniu zwolnienia z opłat sądowych (£234) dla osób o niskich dochodach.",
        price: "w cenie usługi"
      }
    ]
  },
  {
    title: "Wsparcie w mediacjach (MIAM)",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 8.511c.884.284 1.5 1.128 1.5 2.097v4.286c0 1.136-.847 2.1-1.98 2.193-.34.027-.68.052-1.02.072v3.091l-3-3c-1.354 0-2.694-.055-4.02-.163a2.115 2.115 0 0 1-.825-.242m9.345-8.334a2.126 2.126 0 0 0-.476-.095 48.64 48.64 0 0 0-8.048 0c-1.131.094-1.976 1.057-1.976 2.192v4.286c0 .837.46 1.58 1.155 1.951m9.345-8.334V6.637c0-1.621-1.152-3.026-2.76-3.235A48.455 48.455 0 0 0 11.25 3c-2.115 0-4.198.137-6.24.402-1.608.209-2.76 1.614-2.76 3.235v6.226c0 1.621 1.152 3.026 2.76 3.235.577.075 1.157.14 1.74.194V21l4.155-4.155" />
    </svg>`,
    services: [
      {
        title: "Przygotowanie do obowiązkowej mediacji",
        description: "Kompleksowe przygotowanie do obowiązkowej mediacji (wymóg od kwietnia 2024).",
        price: "od £150"
      },
      {
        title: "Reprezentacja w sprawach przemocy domowej",
        description: "Specjalistyczne wsparcie w przypadkach przemocy domowej lub braku współpracy drugiej strony.",
        price: "od £300"
      }
    ]
  },
  {
    title: "Pomoc w sądzie",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v17.25m0 0c-1.472 0-2.882.265-4.185.75M12 20.25c1.472 0 2.882.265 4.185.75M18.75 4.97A48.416 48.416 0 0 0 12 4.5c-2.291 0-4.545.16-6.75.47m13.5 0c1.01.143 2.01.317 3 .52m-3-.52 2.62 10.726c.122.499-.106 1.028-.589 1.202a5.988 5.988 0 0 1-2.031.352 5.988 5.988 0 0 1-2.031-.352c-.483-.174-.711-.703-.59-1.202L18.75 4.971Zm-16.5.52c.99-.203 1.99-.377 3-.52m0 0 2.62 10.726c.122.499-.106 1.028-.589 1.202a5.989 5.989 0 0 1-2.031.352 5.989 5.989 0 0 1-2.031-.352c-.483-.174-.711-.703-.59-1.202L5.25 4.971Z" />
    </svg>`,
    services: [
      {
        title: "Pisemne zeznania i analiza faktów",
        description: "Profesjonalne przygotowanie pisemnych zeznań, analiza faktów sprawy i doradztwo proceduralne.",
        price: "od £200"
      },
      {
        title: "Udział McKenzie Friend podczas rozprawy",
        description: "Osobiste wsparcie podczas rozprawy online lub stacjonarnej.",
        price: "£150 za rozprawę"
      }
    ]
  },
  {
    title: "Inne usługi",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664m-5.8 0A2.251 2.251 0 0 1 13.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25ZM6.75 12h.008v.008H6.75V12Zm0 3h.008v.008H6.75V15Zm0 3h.008v.008H6.75V18Z" />
    </svg>`,
    services: [
      {
        title: "Uzyskanie alimentów",
        description: "Pomoc w uzyskaniu alimentów poprzez Child Maintenance Services.",
        price: "od £150"
      },
      {
        title: "Wnioski o Specific Issue Order",
        description: "Pomoc w sprawach specjalnych, np. zgoda na wyjazd z dzieckiem za granicę.",
        price: "od £250"
      },
      {
        title: "Zmiana nazwiska po rozwodzie",
        description: "Kompleksowa pomoc w formalnej zmianie nazwiska po rozwodzie.",
        price: "£100"
      },
      {
        title: "Konsultacje online",
        description: "Indywidualne konsultacje online dotyczące Twojej sytuacji prawnej.",
        price: "od £50"
      }
    ]
  }
];

const faqs = [
  {
    question: "Czy McKenzie Friend może mnie reprezentować w sądzie?",
    answer: "McKenzie Friend nie może reprezentować Cię w sądzie w takim samym zakresie jak adwokat. Nie może przemawiać w Twoim imieniu ani podpisywać dokumentów. Może jednak siedzieć obok Ciebie, robić notatki, udzielać porad i zapewniać wsparcie moralne podczas postępowania sądowego."
  },
  {
    question: "Czy mogę płacić w ratach?",
    answer: "Tak, oferujemy możliwość płatności ratalnej dla większości naszych usług, w tym dla rozwodu (£400-£600). Szczegóły ustalamy indywidualnie, dostosowując się do Twojej sytuacji finansowej."
  },
  {
    question: "Czy działacie na terenie całej Wielkiej Brytanii?",
    answer: "Działamy na terenie całej Anglii i Walii. Niestety, nie możemy świadczyć usług w Szkocji i Irlandii Północnej, gdzie obowiązuje inny system prawny."
  },
  {
    question: "Jak przebiega współpraca online?",
    answer: "Cały proces odbywa się zdalnie. Konsultacje prowadzimy przez wideokonferencje, dokumenty przesyłamy elektronicznie, a w rozprawach uczestniczymy online. Dzięki temu oszczędzasz czas i koszty dojazdu."
  },
  {
    question: "Czy pomagacie w sprawach karnych?",
    answer: "Nie, specjalizujemy się wyłącznie w prawie rodzinnym. W sprawach karnych zalecamy kontakt z adwokatem specjalizującym się w tej dziedzinie."
  }
];

const testimonials = [
  {
    content: "Dzięki pomocy McKenzie Friend udało mi się uzyskać korzystne warunki kontaktów z dziećmi. Profesjonalne podejście i doskonała znajomość brytyjskiego prawa rodzinnego.",
    author: "Tomasz K.",
    location: "Manchester"
  },
  {
    content: "Proces rozwodowy przebiegł sprawnie i bez zbędnych kosztów. Cała dokumentacja została przygotowana perfekcyjnie, a sąd nie miał żadnych zastrzeżeń.",
    author: "Anna W.",
    location: "Londyn"
  },
  {
    content: "Pomoc w uzyskaniu zgody na wyrobienie polskiego paszportu dla mojej córki była nieoceniona. Wszystko załatwione szybko i skutecznie.",
    author: "Marta S.",
    location: "Birmingham"
  }
];
---

<Layout title="Usługi McKenzie Friend | Profesjonalne Wsparcie Prawne dla Polaków w UK">
  <Navigation />
  <main>
    <!-- Hero Section with animation -->
    <AnimatedSection animation="fadeIn" duration={0.8}>
      <section class="pt-32 pb-24 relative">
        <!-- Light blue background -->
        <div class="absolute inset-0 bg-[#F6FBFE]">
          <!-- Subtle pattern overlay -->
          <div class="absolute inset-0 opacity-10">
            <svg width="100%" height="100%">
              <pattern id="dots" width="20" height="20" patternUnits="userSpaceOnUse">
                <circle cx="10" cy="10" r="1" fill="#0268A1" />
              </pattern>
              <rect width="100%" height="100%" fill="url(#dots)" />
            </svg>
          </div>
        </div>
        
        <div class="container mx-auto px-4 relative z-10">
          <AnimatedSection animation="slideUp" delay={0.2} duration={0.6}>
            <div class="max-w-4xl mx-auto text-center">
              <h1 class="text-4xl md:text-5xl font-serif font-bold mb-6 leading-tight text-primary-700">
                Profesjonalne Wsparcie w Sprawach Rodzinnych
              </h1>
              <p class="text-xl md:text-2xl text-gray-700 mb-10 leading-relaxed max-w-3xl mx-auto">
                Oferujemy pomoc prawną online w zakresie prawa rodzinnego w Anglii i Walii. 
                Działamy od 2015 roku, wspierając rodaków w trudnych sytuacjach sądowych.
              </p>
              <div class="flex flex-wrap justify-center gap-4 mt-8">
                <a href="/#contact" class="bg-primary-600 text-white px-8 py-4 rounded-md font-medium hover:bg-primary-700 transition-colors shadow-sm">
                  Umów konsultację
                </a>
                <a href="https://m.me/YOUR_FACEBOOK_USERNAME" target="_blank" rel="noopener noreferrer" class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-md font-medium transition-colors shadow-sm inline-flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2C6.36 2 2 6.13 2 11.7c0 2.91 1.19 5.44 3.14 7.17.16.14.26.39.27.65l.05 2.02c.02.65.69 1.07 1.27.75l2.26-1.24c.16-.09.34-.14.52-.14.18 0 .36.05.53.13 1.23.53 2.58.82 4 .82 5.64 0 10-4.13 10-9.7C24 6.13 19.64 2 12 2zm6 7.46-2.93 4.67c-.47.73-1.47.92-2.17.37l-2.34-1.73c-.23-.18-.59-.18-.82 0l-3.15 2.39c-.46.35-1.02-.22-.67-.68l2.93-4.67c.47-.73 1.47-.92 2.17-.37l2.34 1.73c.23.18.59.18.82 0l3.15-2.39c.46-.35 1.02.22.67.68z"/>
                  </svg>
                  Messenger
                </a>
                <a href="#services" class="bg-white text-primary-700 border border-primary-200 px-8 py-4 rounded-md font-medium hover:bg-primary-50 transition-colors">
                  Zobacz nasze usługi
                </a>
              </div>
            </div>
          </AnimatedSection>
        </div>
        
        <!-- Stats Section with animation -->
        <div class="container mx-auto px-4 mt-16 relative z-10">
          <div class="max-w-5xl mx-auto">
            <AnimatedSection animation="fadeIn" delay={0.4} duration={0.6}>
              <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
                <div class="bg-white rounded-md p-4 border border-primary-100 text-center shadow-sm">
                  <div class="text-3xl font-bold mb-1 text-primary-700">9+</div>
                  <div class="text-sm text-gray-600">Lat doświadczenia</div>
                </div>
                <div class="bg-white rounded-md p-4 border border-primary-100 text-center shadow-sm">
                  <div class="text-3xl font-bold mb-1 text-primary-700">800+</div>
                  <div class="text-sm text-gray-600">Zadowolonych klientów</div>
                </div>
                <div class="bg-white rounded-md p-4 border border-primary-100 text-center shadow-sm">
                  <div class="text-3xl font-bold mb-1 text-primary-700">70%</div>
                  <div class="text-sm text-gray-600">Spraw zakończonych ugodą</div>
                </div>
                <div class="bg-white rounded-md p-4 border border-primary-100 text-center shadow-sm">
                  <div class="text-3xl font-bold mb-1 text-primary-700">£1100+</div>
                  <div class="text-sm text-gray-600">Średnich oszczędności</div>
                </div>
              </div>
            </AnimatedSection>
          </div>
        </div>
        
        <!-- Wave Divider -->
        <div class="absolute bottom-0 left-0 right-0 w-full overflow-hidden" style="height: 70px; transform: translateY(1px);">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320" preserveAspectRatio="none" class="w-full h-full">
            <path fill="#ffffff" fill-opacity="1" d="M0,96L80,106.7C160,117,320,139,480,133.3C640,128,800,96,960,90.7C1120,85,1280,107,1360,117.3L1440,128L1440,320L1360,320C1280,320,1120,320,960,320C800,320,640,320,480,320C320,320,160,320,80,320L0,320Z"></path>
          </svg>
        </div>
      </section>
    </AnimatedSection>

    <!-- Services Section with animations -->
    <section id="services" class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <AnimatedSection animation="fadeIn" delay={0.1} duration={0.7}>
          <div class="max-w-4xl mx-auto text-center mb-16">
            <span class="bg-primary-100 text-primary-800 text-sm font-medium px-3 py-1 rounded-full">Nasze Usługi</span>
            <h2 class="text-3xl md:text-4xl font-serif font-semibold text-gray-900 mt-4 mb-4">
              Kompleksowe wsparcie w sprawach rodzinnych
            </h2>
            <p class="text-lg text-gray-600 max-w-3xl mx-auto">
              Oferujemy szeroki zakres usług dostosowanych do indywidualnych potrzeb naszych klientów.
            </p>
          </div>
        </AnimatedSection>
        
        <div class="max-w-6xl mx-auto">
          {serviceCategories.map((category, categoryIndex) => (
            <AnimatedSection animation="slideUp" delay={0.2 + categoryIndex * 0.1} duration={0.6}>
              <div class="mb-16">
                <div class="flex items-center mb-8">
                  <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center text-primary-700 mr-4">
                    <Fragment set:html={category.icon} />
                  </div>
                  <div>
                    <h2 class="text-2xl font-serif font-semibold text-gray-900">{category.title}</h2>
                    {category.description && <p class="text-gray-600 mt-1">{category.description}</p>}
                  </div>
                </div>
                
                <div class="grid md:grid-cols-2 gap-8">
                  {category.services.map((service, serviceIndex) => (
                    <AnimatedSection animation="scale" delay={0.3 + categoryIndex * 0.1 + serviceIndex * 0.05} duration={0.5}>
                      <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-gray-100">
                        <div class="flex justify-between items-start mb-6">
                          <h3 class="text-xl font-semibold text-gray-900">{service.title}</h3>
                          <span class="bg-primary-100 text-primary-800 text-sm font-medium px-4 py-1.5 rounded-full whitespace-nowrap">
                            {service.price}
                          </span>
                        </div>
                        <p class="text-gray-600">{service.description}</p>
                        <div class="mt-6 pt-6 border-t border-gray-100">
                          <a href="/#contact" class="text-primary-600 font-medium hover:text-primary-700 transition-colors flex items-center">
                            Zapytaj o szczegóły
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
                            </svg>
                          </a>
                        </div>
                      </div>
                    </AnimatedSection>
                  ))}
                </div>
              </div>
            </AnimatedSection>
          ))}
        </div>
      </div>
    </section>

    <!-- Payment Options Section with animations -->
    <AnimatedSection animation="fadeIn" duration={0.7}>
      <section class="py-20">
        <div class="container mx-auto px-4">
          <div class="max-w-4xl mx-auto">
            <div class="text-center mb-16">
              <span class="bg-primary-100 text-primary-800 text-sm font-medium px-3 py-1 rounded-full">Płatności</span>
              <h2 class="text-3xl md:text-4xl font-serif font-semibold text-gray-900 mt-4 mb-4">
                Elastyczne opcje płatności
              </h2>
              <p class="text-lg text-gray-600 max-w-3xl mx-auto">
                Oferujemy różne formy płatności dostosowane do Twojej sytuacji finansowej.
              </p>
            </div>
            
            <div class="grid md:grid-cols-3 gap-8">
              <AnimatedSection animation="slideUp" delay={0.3} duration={0.5}>
                <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                  <div class="w-16 h-16 bg-primary-100 rounded-2xl flex items-center justify-center text-primary-700 mb-6">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0 1 15.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 0 1 3 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 0 0-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 0 1-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 0 0 3 15h-.75M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm3 0h.008v.008H18V10.5Zm-12 0h.008v.008H6V10.5Z" />
                    </svg>
                  </div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-3">Płatność ratalna</h3>
                  <p class="text-gray-600">Możliwość rozłożenia płatności na dogodne raty, dostosowane do Twojej sytuacji finansowej.</p>
                </div>
              </AnimatedSection>
              
              <AnimatedSection animation="slideUp" delay={0.4} duration={0.5}>
                <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                  <div class="w-16 h-16 bg-primary-100 rounded-2xl flex items-center justify-center text-primary-700 mb-6">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                    </svg>
                  </div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-3">Przejrzyste ceny</h3>
                  <p class="text-gray-600">Jasno określone koszty bez ukrytych opłat. Wiesz dokładnie, za co płacisz i ile to kosztuje.</p>
                </div>
              </AnimatedSection>
              
              <AnimatedSection animation="slideUp" delay={0.5} duration={0.5}>
                <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                  <div class="w-16 h-16 bg-primary-100 rounded-2xl flex items-center justify-center text-primary-700 mb-6">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 14.25l6-6m4.5-3.493V21.75l-3.75-1.5-3.75 1.5-3.75-1.5-3.75 1.5V4.757c0-1.108.806-2.057 1.907-2.185a48.507 48.507 0 0 1 11.186 0c1.1.128 1.907 1.077 1.907 2.185Z" />
                    </svg>
                  </div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-3">Pomoc w zwolnieniu z opłat</h3>
                  <p class="text-gray-600">Wsparcie w uzyskaniu zwolnienia z opłat sądowych dla osób o niskich dochodach.</p>
                </div>
              </AnimatedSection>
            </div>
          </div>
        </div>
      </section>
    </AnimatedSection>

    <!-- CTA Section with animations -->
