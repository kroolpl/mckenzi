---
import { Image } from 'astro:assets';
import avatarMarta from '../assets/images/avatar_Marta.webp';
import avatarBeta from '../assets/images/avatat_beta.webp';

// Add quick stats data
const stats = [
  { 
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
    </svg>`,
    value: "9+",
    label: "Lat doświadczenia"
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
    </svg>`,
    value: "800+",
    label: "Zadowolonych klientów"
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 0 1-1.043 3.296 3.745 3.745 0 0 1-3.296 1.043A3.745 3.745 0 0 1 12 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 0 1-3.296-1.043 3.745 3.745 0 0 1-1.043-3.296A3.745 3.745 0 0 1 3 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 0 1 1.043-3.296 3.746 3.746 0 0 1 3.296-1.043A3.746 3.746 0 0 1 12 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 0 1 3.296 1.043 3.746 3.746 0 0 1 1.043 3.296A3.745 3.745 0 0 1 21 12Z" />
    </svg>`,
    value: "70%",
    label: "Skuteczność"
  }
];
---

<section class="relative flex items-center bg-gradient-to-b from-primary-50 to-white pb-16 pt-32 overflow-x-hidden">
  <!-- Decorative elements - adjusted positioning and size -->
  <div class="absolute inset-0">
    <div class="absolute top-0 right-0 w-[400px] h-[400px] rounded-full bg-primary-100/50 -translate-y-1/4 translate-x-1/3 opacity-75"></div>
    <div class="absolute inset-0 opacity-[0.07]" style="background-image: radial-gradient(#0268A1 0.5px, transparent 0.5px); background-size: 24px 24px;"></div>
  </div>

  <!-- Container with max-width to prevent content overflow -->
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-6xl mx-auto">
      <!-- Main content grid -->
      <div class="grid lg:grid-cols-5 gap-8 items-center">
        <!-- Left column: Main content (spans 3 columns) -->
        <div class="lg:col-span-3 space-y-6">
          <span class="inline-block px-4 py-1.5 bg-primary-100 text-primary-700 rounded-full text-sm font-medium">
            McKenzie Friend Services
          </span>
          
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-serif font-bold text-gray-900">
            Profesjonalne Wsparcie <span class="text-primary-600">McKenzie Friend</span> dla Polaków w UK
          </h1>
          
          <p class="text-lg text-gray-600 leading-relaxed max-w-2xl">
            Ekspercka pomoc w sprawach rodzinnych, pomagamy polskojęzycznym rodzinom w poruszaniu się po brytyjskim systemie prawnym.
          </p>

          <!-- CTA buttons -->
          <div class="flex flex-col sm:flex-row gap-4 pt-2">
            <a href="/kontakt" 
               class="inline-flex flex-col justify-center px-6 py-3 bg-primary-600 text-white rounded-xl shadow-lg hover:bg-primary-700 transition-all duration-300 hover:shadow-primary-500/25 hover:-translate-y-0.5">
              <span>Darmowa Konsultacja</span>
              <span class="text-sm opacity-90">15-minutowe spotkanie</span>
            </a>
            <a href="/uslugi" 
               class="inline-flex items-center px-6 py-3 bg-white text-primary-700 border border-primary-200 rounded-xl hover:bg-primary-50 transition-all duration-300 shadow-lg hover:-translate-y-0.5">
              <span>Nasze Usługi</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        </div>

        <!-- Right column: Expert profiles (spans 2 columns) -->
        <div class="lg:col-span-2 space-y-4">
          <!-- Expert cards - stacked vertically -->
          <div class="bg-white rounded-xl shadow-xl p-5 animate-float-subtle-1">
            <div class="flex items-start gap-4">
              <div class="relative shrink-0">
                <div class="absolute -inset-1 bg-gradient-to-br from-primary-300 to-primary-600 rounded-full blur opacity-30"></div>
                <img 
                  src={avatarMarta.src} 
                  alt="Grażyna Modzelewska" 
                  class="relative w-14 h-14 rounded-full border-2 border-white shadow-lg object-cover"
                />
              </div>
              <div>
                <h3 class="text-base font-medium text-gray-900">Grażyna Modzelewska</h3>
                <p class="text-gray-600 mt-1 text-sm leading-relaxed">
                  "Jestem głosem najmłodszych – ich bezpieczeństwo to kompas, który wyznacza każdą decyzję."
                </p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-xl shadow-xl p-5 animate-float-subtle-2">
            <div class="flex items-start gap-4">
              <div class="relative shrink-0">
                <div class="absolute -inset-1 bg-gradient-to-br from-primary-300 to-primary-600 rounded-full blur opacity-30"></div>
                <img 
                  src={avatarBeta.src} 
                  alt="Beata Modzelewska" 
                  class="relative w-14 h-14 rounded-full border-2 border-white shadow-lg object-cover"
                />
              </div>
              <div>
                <h3 class="text-base font-medium text-gray-900">Beata Modzelewska</h3>
                <p class="text-gray-600 mt-1 text-sm leading-relaxed">
                  "Wiedza to Twój najsilniejszy oręż – bronię Twoich praw, byś mógł iść naprzód z godnością."
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes float-subtle-1 {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-5px); }
  }

  @keyframes float-subtle-2 {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-5px); }
  }

  .animate-float-subtle-1 {
    animation: float-subtle-1 8s infinite ease-in-out;
  }

  .animate-float-subtle-2 {
    animation: float-subtle-2 10s infinite ease-in-out;
  }
</style>