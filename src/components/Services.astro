// Define the type for icon keys
type IconKey = keyof typeof icons;

const services = [
  {
    title: "Wsparcie w Sądzie Rodzinnym",
    description: "Profesjonalne wsparcie podczas rozpraw sądowych, włączając przygotowanie dokumentacji i obecność w sądzie.",
    icon: "scale" as IconKey
  },
  {
    title: "Przygotowanie Dokumentów",
    description: "Fachowa pomoc w przygotowaniu dokumentów prawnych, formularzy i wniosków sądowych w języku angielskim i polskim.",
    icon: "document" as IconKey
  },
  {
    title: "Zarządzanie Sprawą",
    description: "Kompleksowe zarządzanie sprawą, w tym organizacja dowodów i prowadzenie harmonogramu sprawy.",
    icon: "folder" as IconKey
  },
  {
    title: "Tłumaczenia",
    description: "Dokładne tłumaczenie dokumentów prawnych oraz tłumaczenie w czasie rzeczywistym podczas spotkań i rozpraw.",
    icon: "language" as IconKey
  }
];
---

<section id="services" class="py-16 bg-gradient-to-b from-white to-primary-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-serif font-semibold text-gray-900 mb-4">Nasze Usługi</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Kompleksowe wsparcie prawne dostosowane do potrzeb Polaków w brytyjskim systemie sądów rodzinnych.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.map((service) => (
        <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
          <div class="w-12 h-12 bg-primary-50 rounded-lg flex items-center justify-center mb-4 text-primary-600">
            <Fragment set:html={icons[service.icon]} />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">{service.title}</h3>
          <p class="text-gray-600">{service.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>