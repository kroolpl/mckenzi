---
import { 
  PhoneIcon, 
  EnvelopeIcon, 
  MapPinIcon 
} from '@heroicons/react/24/outline';

declare const footer: any;

const currentYear = new Date().getFullYear();

const links = [
  { text: "Strona główna", href: "/" },
  { text: "Usługi", href: "#services" },
  { text: "O nas", href: "#about" },
  { text: "Kontakt", href: "#contact" },
];

const contact = {
  phone: "+44 123 456 789",
  email: "kontakt@mckenziefriend.co.uk",
  address: "123 Legal Street, Manchester, M1 1AB"
};
---

<footer class="bg-gray-50 border-t border-gray-200">
  <div class="container mx-auto px-4 py-12">
    <div class="grid md:grid-cols-4 gap-8">
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="flex items-center">
          <span class="text-xl font-serif font-semibold text-primary-700">mckenzi.co.uk</span>
          <span class="ml-2 text-primary-600 font-serif italic"></span>
        </a>
        <p class="mt-4 text-gray-600 text-sm">
          Profesjonalne wsparcie prawne dla Polaków w Wielkiej Brytanii, specjalizujące się w prawie rodzinnym.
        </p>
      </div>

      <div>
        <h3 class="font-semibold text-gray-900 mb-4">Nawigacja</h3>
        <ul class="space-y-2">
          {links.map(link => (
            <li>
              <a href={link.href} class="text-gray-600 hover:text-primary-700 transition-colors">
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h3 class="font-semibold text-gray-900 mb-4">Kontakt</h3>
        <ul class="space-y-2 text-gray-600">
          <li class="flex items-center gap-2">
            <PhoneIcon className="w-5 h-5 text-primary-600" />
            {contact.phone}
          </li>
          <li class="flex items-center gap-2">
            <EnvelopeIcon className="w-5 h-5 text-primary-600" />
            {contact.email}
          </li>
          <li class="flex items-center gap-2">
            <MapPinIcon className="w-5 h-5 text-primary-600" />
            {contact.address}
          </li>
          <li class="flex items-center gap-2 mt-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary-600" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2C6.36 2 2 6.13 2 11.7c0 2.91 1.19 5.44 3.14 7.17.16.14.26.39.27.65l.05 2.02c.02.65.69 1.07 1.27.75l2.26-1.24c.16-.09.34-.14.52-.14.18 0 .36.05.53.13 1.23.53 2.58.82 4 .82 5.64 0 10-4.13 10-9.7C24 6.13 19.64 2 12 2zm6 7.46-2.93 4.67c-.47.73-1.47.92-2.17.37l-2.34-1.73c-.23-.18-.59-.18-.82 0l-3.15 2.39c-.46.35-1.02-.22-.67-.68l2.93-4.67c.47-.73 1.47-.92 2.17-.37l2.34 1.73c.23.18.59.18.82 0l3.15-2.39c.46-.35 1.02.22.67.68z"/>
            </svg>
            <a href="https://m.me/YOUR_FACEBOOK_USERNAME" target="_blank" rel="noopener noreferrer" class="text-primary-600 hover:text-primary-700">
              Messenger
            </a>
          </li>
        </ul>
      </div>

      <div>
        <h3 class="font-semibold text-gray-900 mb-4">Godziny pracy</h3>
        <ul class="space-y-2 text-gray-600">
          <li>Poniedziałek - Piątek: 9:00 - 17:00</li>
          <li>Sobota: 10:00 - 14:00</li>
          <li>Niedziela: Zamknięte</li>
        </ul>
      </div>
    </div>

    <div class="mt-12 pt-8 border-t border-gray-200">
      <p class="text-center text-gray-600 text-sm">
        © {currentYear} McKenzie Friend Services. Wszelkie prawa zastrzeżone.
      </p>
    </div>
  </div>
</footer>